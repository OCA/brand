<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.brand.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='checkout_assignation_setting']/div/div[hasclass('content-group')]" position="inside">
                <div class="row mt16">
                    <label class="o_light_label col-lg-3" for="brand_id"/>
                    <field name="brand_id"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
